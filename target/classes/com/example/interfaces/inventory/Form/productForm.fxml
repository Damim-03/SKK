                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="barcodeField" alignment="CENTER" editable="false" layoutX="64.0" layoutY="105.0" prefHeight="25.0" prefWidth="529.0" promptText="Scan Barcode">
