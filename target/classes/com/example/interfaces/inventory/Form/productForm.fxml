                <DatePicker fx:id="expirationDatePicker" editable="false" layoutX="72.0" layoutY="564.0" prefHeight="25.0" prefWidth="203.0" promptText="DD/MM/YYYY" />
                <ImageView fx:id="productImageView" fitHeight="200.0" fitWidth="207.0" layoutX="273.0" layoutY="663.0" preserveRatio="true">
