<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="613.0" prefWidth="470.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.library.controller.barcode.BarcodeA4Controller">
    <children>
        <Label layoutX="125.0" layoutY="14.0" text="طباعة على ورق من قياس A4">
            <graphic>
                <ImageView fitHeight="28.0" fitWidth="28.0">
                    <image>
                        <Image url="@../../../../../images/a4.png" />
                    </image>
                </ImageView>
            </graphic>
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Label>

        <!-- عدد اللواصق في الصف -->
        <Label layoutX="308.0" layoutY="106.0" text="عدد اللواصق في الصف">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="txtLabelsPerRow" layoutX="64.0" layoutY="104.0"
                   prefHeight="26.0" prefWidth="219.0" promptText="6" text="6" />

        <!-- اسم المنتج -->
        <Label layoutX="357.0" layoutY="155.0" text="اسم المنتج">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="txtProductName" layoutX="64.0" layoutY="151.0"
                   prefHeight="26.0" prefWidth="246.0" />

        <!-- ارتفاع اللاصق -->
        <Label layoutX="347.0" layoutY="204.0" text="ارتفاع اللاصق">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="txtLabelHeight" layoutX="64.0" layoutY="200.0"
                   prefHeight="26.0" prefWidth="246.0" promptText="37.0" text="37.0" />

        <!-- حجم الخط -->
        <Label layoutX="353.0" layoutY="253.0" text="حجم الخط">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="txtFontSize" layoutX="64.0" layoutY="249.0"
                   prefHeight="26.0" prefWidth="246.0" promptText="10.0" text="10.0" />

        <!-- الهوامش -->
        <Label layoutX="360.0" layoutY="307.0" text="الهوامش">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="txtMarginTop" layoutX="193.0" layoutY="329.0"
                   prefHeight="45.0" prefWidth="83.0" promptText="1" text="1" />
        <TextField fx:id="txtMarginLeft" layoutX="41.0" layoutY="404.0"
                   prefHeight="45.0" prefWidth="83.0" promptText="1" text="1" />
        <TextField fx:id="txtMarginRight" layoutX="344.0" layoutY="404.0"
                   prefHeight="45.0" prefWidth="83.0" promptText="1" text="1" />
        <TextField fx:id="txtMarginBottom" layoutX="193.0" layoutY="478.0"
                   prefHeight="45.0" prefWidth="83.0" promptText="1" text="1" />

        <!-- صورة توضيحية -->
        <ImageView fitHeight="95.0" fitWidth="183.0" layoutX="143.0" layoutY="379.0">
            <image>
                <Image url="@../../../../../images/barcode.png" />
            </image>
        </ImageView>

        <!-- الأزرار -->
        <Button fx:id="btnCancel" layoutX="83.0" layoutY="560.0"
                prefHeight="26.0" prefWidth="129.0"
                mnemonicParsing="false" text="الغاء الامر"
                onAction="#handleCancel">
            <graphic>
                <ImageView fitHeight="28.0" fitWidth="28.0">
                    <image>
                        <Image url="@../../../../../images/cancel.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnPreview" layoutX="261.0" layoutY="560.0"
                prefHeight="26.0" prefWidth="129.0"
                mnemonicParsing="false" text="عرض"
                onAction="#handlePreview">
            <graphic>
                <ImageView fitHeight="28.0" fitWidth="28.0">
                    <image>
                        <Image url="@../../../../../images/show-property.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
