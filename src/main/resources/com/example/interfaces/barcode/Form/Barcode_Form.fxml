<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="387.0" prefWidth="493.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.controller.barcode.BarcodeFormController">

    <children>
        <Label layoutX="172.0" layoutY="14.0" text="طباعة الباركود">
            <graphic>
                <ImageView>
                    <image>
                        <Image url="@../../../../../images/barcode.png" />
                    </image>
                </ImageView>
            </graphic>
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <Button fx:id="btnPrintA4" layoutX="14.0" layoutY="127.0" mnemonicParsing="false" onAction="#handlePrintA4" prefHeight="42.0" prefWidth="462.0" text="طباعة على ورق من قياس A4">
            <graphic>
                <ImageView fitHeight="28.0" fitWidth="28.0">
                    <image>
                        <Image url="@../../../../../images/a4.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnPrintBarcodePaper" layoutX="16.0" layoutY="210.0" mnemonicParsing="false" onAction="#handlePrintBarcodePaper" prefHeight="42.0" prefWidth="462.0" text="طباعة على قياس طابعة الباركود">
            <graphic>
                <ImageView>
                    <image>
                        <Image url="@../../../../../images/barcode-paper.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnExit" layoutX="15.0" layoutY="292.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="42.0" prefWidth="462.0" text="الخروج من النافذة" />

        <ImageView fitHeight="28.0" fitWidth="28.0" layoutX="158.0" layoutY="299.0">
            <image>
                <Image url="@../../../../../images/cancel.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
