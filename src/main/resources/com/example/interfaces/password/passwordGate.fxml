<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.library.controller.home.PasswordGateController"
            prefHeight="300.0" prefWidth="400.0"
            style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4ca1af);">

    <children>
        <VBox alignment="CENTER" spacing="15.0" layoutX="60.0" layoutY="60.0" prefWidth="280.0" prefHeight="180.0"
              style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 15;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="أدخل كلمة المرور"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

            <PasswordField fx:id="passwordField"
                           promptText="كلمة المرور"
                           style="-fx-background-radius: 8; -fx-font-size: 14px;"/>

            <Button fx:id="btnUnlock"
                    text="تأكيد"
                    onAction="#handleUnlock"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;
                           -fx-background-radius: 8; -fx-font-size: 14px;"/>

            <Label fx:id="lblStatus"
                   text=""
                   style="-fx-text-fill: #ffdddd; -fx-font-size: 12px;"/>

        </VBox>
    </children>
</AnchorPane>
